<%= simple_form_for(@product, :html => {:class => 'form-horizontal' }) do |f|%>
  <%= f.association :display%>
  <%= f.association :category%>
  <%= f.association :mold%>
  <%= f.association :size, as: :radio_buttons, item_wrapper_class: 'inline'%>
  <%= f.association :measure%>
  <%= f.button :submit%>
<% end -%>